<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/sh_checkbox"
        android:contentDescription="Seleccionar cine"/>

    <TextView
        android:id="@+id/tvNombreCine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:text="Del RÃ­o Plaza"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end|center_vertical">

        <ImageView
            android:id="@+id/ivFav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_outlined"
            android:layout_gravity="center"
            android:tint="#FF5D5D"/>

        <TextView
            android:id="@+id/tvDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.3 km"
            android:textColor="#8FB0FF"
            android:textSize="10sp"/>

    </LinearLayout>
</LinearLayout>
