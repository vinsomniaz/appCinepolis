<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="40dp"
    android:paddingVertical="30dp"
    android:background="@drawable/bg_img_bienvenida2"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tvSaltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saltar"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/llPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/sh_punto_superior_off"/>

        <View android:layout_width="8dp" android:layout_height="8dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/sh_punto_superior_off" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/sh_punto_superior_off" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/sh_punto_superior_off" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/sh_punto_superior_on" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtitulo">

        <TextView
            android:id="@+id/tvTituloClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLUB"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="#FFB64C"/>

        <TextView
            android:id="@+id/tvTituloCinepolis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" cinépolis"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inicia sesión o regístrate gratis y usa tus beneficios desde esta app."
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/llTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnContinuarInvitado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continuar como invitado"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/sh_btn_celeste"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLoginRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión o registrarte"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnContinuarInvitado"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
