<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootClub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="24dp"
    android:background="#0B1220"
    android:fitsSystemWindows="true" >

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEncabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicia sesión o crea una cuenta en"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEncabezado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTituloClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLUB"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="#FFB64C" />

        <TextView
            android:id="@+id/tvTituloCinepolis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" cinépolis"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Ya tienes tu cuenta digital con QR?"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/llTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Inicie sesión"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/sh_btn_celeste"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvIntermedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="o crea una cuenta para comenzar a disfrutar los beneficios de ser socio"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:alpha="0.75"
        android:gravity="center"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/btnIniciarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Crea tu cuenta"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/sh_btn_outlined"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntermedio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#26FFFFFF"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvNota"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Si tienes una tarjeta física Club Cinépolis\nactualízala a una digital"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvActualizarCuenta"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvActualizarCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar cuenta"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:alpha="0.6"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
