<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMisCompras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:paddingTop="-14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/sh_btn_celeste"
        android:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llTabs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tabActivas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvActivas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activas"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <View
                android:id="@+id/underlineActivas"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/celeste"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabPasadas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvPasadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasadas"
                android:layout_marginBottom="5dp"
                android:textColor="#99FFFFFF"
                android:textSize="14sp"/>

            <View
                android:id="@+id/underlinePasadas"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gris"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stateActivas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/sh_card_dark"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="40dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@id/llTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_compras"
            android:tint="#A3ACBB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aún no tienes compras"
            android:textColor="#A3ACBB"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todas tus compras de boletos y órdenes de alimentos las verás aquí. Para comprar boletos, visita la sección Películas."
            android:textColor="#A3ACBB"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2dp"/>

        <Button
            android:id="@+id/btnIrCarteleraA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ir a cartelera"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/sh_btn_celeste"
            android:layout_marginTop="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statePasadas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/sh_card_dark"
        android:paddingHorizontal="32dp"
        android:paddingVertical="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llTabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_compras"
            android:tint="#6682A8FF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aún no tienes compras pasadas"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuando compres y uses tus boletos, las órdenes completadas aparecerán aquí."
            android:textColor="#99FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2dp"/>

        <Button
            android:id="@+id/btnIrCarteleraP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ir a cartelera"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/sh_btn_celeste"
            android:layout_marginTop="18dp"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors" />

</androidx.constraintlayout.widget.ConstraintLayout>
